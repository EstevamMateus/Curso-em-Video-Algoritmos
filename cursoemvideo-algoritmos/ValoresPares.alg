algoritmo "valoresPares"
// Função :
// Autor :
// Data : 17/06/2021
// Seção de Declarações 
var
      cont, V: inteiro
inicio
       escreva(" Digite um valor: ")
       leia(V)
       Se (V%2=1) entao
          V <- V -1
       FimSe
       Para cont <- V ate 0 passo -2 faca
            escreval(cont)
       FimPara

fimalgoritmo
